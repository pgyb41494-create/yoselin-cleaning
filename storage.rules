rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Booking photos — authenticated users can upload to their own folder
    match /bookings/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // 10 MB max
                   && request.resource.contentType.matches('image/.*');
    }

    // Admin-created bookings use "admin" as the userId folder
    match /bookings/admin/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.token.email == 'pgyb41494@gmail.com';
    }

    // Gallery photos — admin can upload, anyone can view
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && (request.auth.token.email == 'pgyb41494@gmail.com'
                       || request.auth.token.email == 'cardonayoselin422@gmail.com'
                       || request.auth.token.email == 'Cardonayoselin422@gmail.com')
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
